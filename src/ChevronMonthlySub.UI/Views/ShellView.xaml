<Window x:Class="ChevronMonthlySub.UI.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        Title="ShellViewModel" Height="300" Width="500"
        Background="LightGray">
    <Grid Margin="9">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <StackPanel>
      <TextBox x:Name="RowSourcePath" 
               Height="36"
               cal:Message.Attach="[Event PreviewDragOver] = [Action HandleFolderDrag($eventArgs)];[Event PreviewDrop] = [Action HandleFolderDrop($executionContext]"/>
      <Label Content="Drop Report here"
             HorizontalAlignment="Left"/>
    </StackPanel>

  </Grid>
</Window>
