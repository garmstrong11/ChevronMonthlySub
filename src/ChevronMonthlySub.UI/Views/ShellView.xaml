<Window x:Class="ChevronMonthlySub.UI.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        Title="ShellViewModel" Height="300" Width="500"
        Background="LightGray">
    <Grid Margin="9">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <StackPanel>
      <Label Content="Drop Report here"
             HorizontalAlignment="Left"
             Padding="0"/>
      <TextBox x:Name="RowSourcePath" 
               Height="24"
               cal:Message.Attach="[Event PreviewDragOver] = [Action HandleFileDrag($eventArgs)];[Event PreviewDrop] = [Action HandleFileDrop($executionContext]"/>
    </StackPanel>
      
    <ContentControl x:Name="PurchaseOrders"
                    Grid.Row="1"
                    Margin="0 9"/>
      
    <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right">
      <Button x:Name="RunReports"
              Content="Run Reports"
              Padding="9 3"/>
    </StackPanel>

  </Grid>
</Window>
